<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".fragments.OverdueBooksFragment">

    <!-- ðŸ—ï¸ AppBar moderno y minimalista -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:elevation="0dp"
        app:elevation="0dp"
        android:fitsSystemWindows="true">

        <!-- ðŸ“‹ Header profesional -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp">

            <!-- ðŸ·ï¸ SecciÃ³n principal sin navegaciÃ³n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- ðŸ“š TÃ­tulo principal -->
                <TextView
                    android:id="@+id/screen_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Devoluciones"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <!-- ðŸ“Š SubtÃ­tulo informativo -->
                <TextView
                    android:id="@+id/screen_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GestiÃ³n y seguimiento de prÃ©stamos pendientes"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.8" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ðŸ“± Contenido principal con scroll behavior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- ðŸŽ¯ Filtros fijos -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_filter_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="1dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <!-- ðŸ·ï¸ Header minimalista -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Filtros"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_filter_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todos los prÃ©stamos"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:alpha="0.8" />

                </LinearLayout>

                <!-- ðŸŽ¯ Chips elegantes con scroll horizontal -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:clipToPadding="false">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_filters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="false"
                        app:singleLine="true"
                        app:chipSpacing="10dp">

                        <!-- Todos -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_all"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Todos"
                            android:checked="true"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            app:chipIcon="@drawable/ic_book_library"
                            app:chipIconTint="?attr/colorOnSurfaceVariant"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="16dp"
                            app:chipMinHeight="36dp" />

                        <!-- PrÃ³ximos -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_upcoming"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PrÃ³ximos"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            app:chipIcon="@drawable/ic_calendar"
                            app:chipIconTint="?attr/colorOnSurfaceVariant"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="16dp"
                            app:chipMinHeight="36dp" />

                        <!-- Hoy -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_today"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoy"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            app:chipIcon="@android:drawable/ic_menu_today"
                            app:chipIconTint="?attr/colorOnSurfaceVariant"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="16dp"
                            app:chipMinHeight="36dp" />

                        <!-- Vencidos -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_recent_overdue"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vencidos"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            app:chipIcon="@android:drawable/ic_dialog_alert"
                            app:chipIconTint="?attr/colorOnSurfaceVariant"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="16dp"
                            app:chipMinHeight="36dp" />

                        <!-- Tarde -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_late"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tarde"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            app:chipIcon="@android:drawable/ic_menu_recent_history"
                            app:chipIconTint="?attr/colorOnSurfaceVariant"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="16dp"
                            app:chipMinHeight="36dp" />

                        <!-- Urgente -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_urgent"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Urgente"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            app:chipIcon="@android:drawable/ic_dialog_info"
                            app:chipIconTint="?attr/colorOnSurfaceVariant"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="16dp"
                            app:chipMinHeight="36dp" />

                        <!-- CrÃ­tico -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_critical"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CrÃ­tico"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            app:chipIcon="@android:drawable/ic_delete"
                            app:chipIconTint="?attr/colorOnSurfaceVariant"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="16dp"
                            app:chipMinHeight="36dp" />

                    </com.google.android.material.chip.ChipGroup>

                </HorizontalScrollView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ“‹ Contenedor principal de contenido -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- ðŸ“‹ Lista principal rediseÃ±ada -->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp">

                <!-- ðŸ“š RecyclerView elegante -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/overdue_books_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:paddingBottom="24dp"
                    android:clipToPadding="false"
                    android:overScrollMode="ifContentScrolls"
                    tools:listitem="@layout/item_overdue_book" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <!-- ðŸ”„ Estado de carga elegante -->
            <LinearLayout
                android:id="@+id/loading_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:background="?attr/colorSurface"
                android:visibility="gone">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_bar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminate="true"
                    app:indicatorColor="?attr/colorPrimary"
                    app:trackColor="?attr/colorSurfaceVariant"
                    app:trackThickness="4dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargando devoluciones..."
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- âœ¨ Estado vacÃ­o elegante - Centrado perfectamente -->
            <LinearLayout
                android:id="@+id/empty_state_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:background="?attr/colorSurface"
                android:visibility="gone">

                <!-- ðŸŽ¯ Icono elegante -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="?attr/colorPrimaryContainer"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_agenda"
                        app:tint="?attr/colorOnPrimaryContainer" />

                </com.google.android.material.card.MaterialCardView>

                <!-- ðŸ“ Mensaje principal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todo al dÃ­a"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- ðŸ“„ DescripciÃ³n -->
                <TextView
                    android:id="@+id/empty_state_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay libros pendientes de devoluciÃ³n"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textAlignment="center"
                    android:alpha="0.8"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
