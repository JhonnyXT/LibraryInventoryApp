<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".fragments.OverdueBooksFragment">

    <!-- 🎯 App Bar moderno con Material Design 3 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp">

            <!-- 📋 Título principal -->
            <TextView
                android:id="@+id/screen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Devoluciones"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- 📊 Subtítulo elegante -->
            <TextView
                android:id="@+id/screen_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestión de préstamos pendientes"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:alpha="0.8" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 📱 Contenido principal con scroll behavior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 🎯 Filtro minimalista y elegante -->
        <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_filter_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="16dp">

                    <!-- 🏷️ Header minimalista -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estado"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:alpha="0.9" />

                        <!-- 📊 Badge contador elegante -->
                        <TextView
                            android:id="@+id/text_filter_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Todos (0)"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:background="@drawable/category_chip_bg"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />

                    </LinearLayout>

                    <!-- 🎯 Chips elegantes con scroll -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:clipToPadding="false">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_filters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="false"
                            app:singleLine="true"
                            app:chipSpacing="10dp">

                            <!-- Todos -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_all"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Todos"
                                android:checked="true"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                app:chipBackgroundColor="@color/chip_category_background"
                                app:chipStrokeWidth="0dp"
                                app:chipCornerRadius="16dp"
                                app:chipMinHeight="36dp" />

                            <!-- Próximos -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_upcoming"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Próximos"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                app:chipBackgroundColor="@color/chip_category_background"
                                app:chipStrokeWidth="0dp"
                                app:chipCornerRadius="16dp"
                                app:chipMinHeight="36dp" />

                            <!-- Hoy -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_today"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hoy"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                app:chipBackgroundColor="@color/chip_category_background"
                                app:chipStrokeWidth="0dp"
                                app:chipCornerRadius="16dp"
                                app:chipMinHeight="36dp" />

                            <!-- Vencidos -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_recent_overdue"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vencidos"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                app:chipBackgroundColor="@color/chip_category_background"
                                app:chipStrokeWidth="0dp"
                                app:chipCornerRadius="16dp"
                                app:chipMinHeight="36dp" />

                            <!-- Tarde -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_late"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tarde"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                app:chipBackgroundColor="@color/chip_category_background"
                                app:chipStrokeWidth="0dp"
                                app:chipCornerRadius="16dp"
                                app:chipMinHeight="36dp" />

                            <!-- Urgente -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_urgent"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Urgente"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                app:chipBackgroundColor="@color/chip_category_background"
                                app:chipStrokeWidth="0dp"
                                app:chipCornerRadius="16dp"
                                app:chipMinHeight="36dp" />

                            <!-- Crítico -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_critical"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Crítico"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                app:chipBackgroundColor="@color/chip_category_background"
                                app:chipStrokeWidth="0dp"
                                app:chipCornerRadius="16dp"
                                app:chipMinHeight="36dp" />

                        </com.google.android.material.chip.ChipGroup>

                    </HorizontalScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        <!-- 📋 Contenedor principal de contenido -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- 📋 Lista principal rediseñada -->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp">

                <!-- 📚 RecyclerView elegante -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/overdue_books_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:paddingBottom="24dp"
                    android:clipToPadding="false"
                    android:overScrollMode="ifContentScrolls"
                    tools:listitem="@layout/item_overdue_book" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <!-- 🔄 Estado de carga elegante -->
            <LinearLayout
                android:id="@+id/loading_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:background="?attr/colorSurface"
                android:visibility="gone">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_bar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminate="true"
                    app:indicatorColor="?attr/colorPrimary"
                    app:trackColor="?attr/colorSurfaceVariant"
                    app:trackThickness="4dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargando devoluciones..."
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- ✨ Estado vacío elegante - Centrado perfectamente -->
            <LinearLayout
                android:id="@+id/empty_state_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:background="?attr/colorSurface"
                android:visibility="gone">

                <!-- 🎯 Icono elegante -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="?attr/colorPrimaryContainer"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_agenda"
                        app:tint="?attr/colorOnPrimaryContainer" />

                </com.google.android.material.card.MaterialCardView>

                <!-- 📝 Mensaje principal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todo al día"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- 📄 Descripción -->
                <TextView
                    android:id="@+id/empty_state_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay libros pendientes de devolución"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textAlignment="center"
                    android:alpha="0.8"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
