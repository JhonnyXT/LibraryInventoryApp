        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/screen_subtitle">

        <!-- RecyclerView para la lista de libros vencidos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/overdue_books_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_overdue_book" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Estado vacÃ­o cuando no hay libros vencidos -->
    <TextView
        android:id="@+id/empty_state_text"
