<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 🎯 Overlay transparente para cerrar el menú -->
    <View
        android:id="@+id/overlay_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- 📱 Container del menú flotante -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="end">

        <!-- ✏️ Opción: Editar libro -->
        <LinearLayout
            android:id="@+id/menu_edit_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_floating_menu_item"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="20dp"
            android:paddingVertical="12dp"
            android:elevation="4dp"
            android:visibility="gone"
            android:alpha="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar libro"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginEnd="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorPrimary">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Editar libro"
                    app:tint="?attr/colorOnPrimary" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- 🗑️ Opción: Eliminar libro -->
        <LinearLayout
            android:id="@+id/menu_delete_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_floating_menu_item"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="20dp"
            android:paddingVertical="12dp"
            android:elevation="4dp"
            android:visibility="gone"
            android:alpha="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar libro"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginEnd="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorError">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Eliminar libro"
                    app:tint="?attr/colorOnError" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- 🔥 FAB principal -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_options"
            android:contentDescription="Opciones del libro"
            app:tint="?attr/colorOnPrimary"
            app:backgroundTint="?attr/colorPrimary" />

    </LinearLayout>

</FrameLayout>
