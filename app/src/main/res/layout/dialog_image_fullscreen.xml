<?xml version="1.0" encoding="utf-8"?>
<!-- 🖼️ Dialog para mostrar imagen en pantalla completa con zoom -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6000000"
    android:clickable="true"
    android:focusable="true">

    <!-- 🖼️ Imagen con zoom y pan -->
    <ImageView
        android:id="@+id/img_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="Imagen del libro en pantalla completa"
        android:scaleType="matrix"
        android:adjustViewBounds="true" />

    <!-- ❌ Botón cerrar -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_close_fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:contentDescription="Cerrar imagen"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@android:color/white"
        app:backgroundTint="?attr/colorPrimary"
        app:elevation="6dp" />

</RelativeLayout>
