<?xml version="1.0" encoding="utf-8"?>
<!-- â­ Item de Wishlist - DiseÃ±o Limpio y Profesional -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_wishlist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ðŸ“š Imagen del libro -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_book_image_wishlist"
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_wishlist_book_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Portada del libro"
                android:scaleType="centerCrop"
                tools:src="@drawable/book_placeholder" />

        </com.google.android.material.card.MaterialCardView>

        <!-- âŒ BotÃ³n remover favorito -->
        <ImageButton
            android:id="@+id/btn_remove_favorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Remover de favoritos"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ðŸ“– TÃ­tulo del libro -->
        <TextView
            android:id="@+id/text_wishlist_book_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_book_image_wishlist"
            app:layout_constraintEnd_toStartOf="@id/btn_remove_favorite"
            tools:text="The Catcher in the Rye" />

        <!-- âœï¸ Autor del libro -->
        <TextView
            android:id="@+id/text_wishlist_book_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="6dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/text_wishlist_book_title"
            app:layout_constraintStart_toEndOf="@id/card_book_image_wishlist"
            app:layout_constraintEnd_toStartOf="@id/btn_remove_favorite"
            tools:text="J.D. Salinger" />

        <!-- ðŸ·ï¸ CategorÃ­a principal -->
        <TextView
            android:id="@+id/text_wishlist_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/category_chip_bg"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/text_wishlist_book_author"
            app:layout_constraintStart_toEndOf="@id/card_book_image_wishlist"
            tools:text="Romance" />

        <!-- ðŸŽ¯ Badge de disponibilidad -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_availability_badge_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/available_bg"
            app:cardCornerRadius="11dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/text_wishlist_book_author"
            app:layout_constraintStart_toEndOf="@id/text_wishlist_category"
            app:strokeColor="@color/available_bg"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/text_availability_wishlist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:text="Disponible"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="@color/available_text"
                android:textStyle="bold"
                tools:text="Disponible" />

        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ“… Fecha aÃ±adido -->
        <TextView
            android:id="@+id/text_wishlist_added_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:alpha="0.7"
            app:layout_constraintTop_toBottomOf="@id/text_wishlist_category"
            app:layout_constraintStart_toEndOf="@id/card_book_image_wishlist"
            app:layout_constraintEnd_toStartOf="@id/btn_remove_favorite"
            app:layout_constraintBottom_toBottomOf="@id/card_book_image_wishlist"
            tools:text="AÃ±adido el 15/09/2024" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
