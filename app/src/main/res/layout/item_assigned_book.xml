<?xml version="1.0" encoding="utf-8"?>
<!-- Tarjeta simple con LinearLayout para libros asignados -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_admin_card"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen del libro -->
        <ImageView
            android:id="@+id/book_image"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="#F5F5F5"
            tools:srcCompat="@tools:sample/avatars" />

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Título del libro -->
            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del libro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/bottom_sheet_title"
                android:fontFamily="sans-serif-medium"
                android:ellipsize="end"
                android:maxLines="2" />

            <!-- Autor del libro -->
            <TextView
                android:id="@+id/book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="por Nombre del Autor"
                android:textSize="14sp"
                android:textColor="@color/bottom_sheet_secondary"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Alerta de vencimiento -->
            <TextView
                android:id="@+id/expiration_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="⚠️ Venció hace 3 días"
                android:textColor="#D32F2F"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Hint para detalles -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="👆 Toca para ver detalles y fechas"
                android:textSize="11sp"
                android:textColor="@color/bottom_sheet_secondary"
                android:fontFamily="sans-serif"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Indicador de estado -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="#4CAF50" />

    </LinearLayout>

    <!-- Datos ocultos para BottomSheet -->
    <TextView
        android:id="@+id/book_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/book_cetegories"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/book_isbn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</FrameLayout>