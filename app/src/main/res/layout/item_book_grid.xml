<?xml version="1.0" encoding="utf-8"?>
<!-- 📖 Item Book Grid - Diseño como la primera imagen (3 por fila) -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_book_grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainerHigh">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- 📚 Imagen del libro (más grande) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_book_image_grid"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/img_book_cover_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Portada del libro"
                android:scaleType="centerCrop"
                tools:src="@drawable/book_placeholder" />

            <!-- 🎯 Badge de disponibilidad (esquina inferior izquierda) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_availability_badge_grid"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="bottom|start"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/available_bg">

                <TextView
                    android:id="@+id/text_availability_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:text="Disponible"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="@color/available_text"
                    tools:text="Disponible" />

            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>

        <!-- 📝 Información del libro (minimalista) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/card_book_image_grid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 📖 Título del libro -->
            <TextView
                android:id="@+id/text_book_title_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                tools:text="Psicología Oscura" />

            <!-- ✍️ Autor del libro -->
            <TextView
                android:id="@+id/text_book_author_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Gabriel Moreno" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
