<?xml version="1.0" encoding="utf-8"?>
<!-- 💬 Item de comentario - Diseño moderno Material Design 3 -->
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 👤 Header: Usuario y tiempo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- 👤 Avatar circular -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorPrimary">

                <TextView
                    android:id="@+id/text_user_initial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="G" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- 👤 Nombre de usuario -->
                <TextView
                    android:id="@+id/text_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    tools:text="Guillermo Maldonado" />

                <!-- 🕒 Tiempo relativo -->
                <TextView
                    android:id="@+id/text_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Hace 2 horas" />

                <!-- 📅 Fecha específica -->
                <TextView
                    android:id="@+id/text_comment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.7"
                    tools:text="15 Dec 2024" />

            </LinearLayout>

            <!-- ✏️ Indicador de editado (opcional) -->
            <TextView
                android:id="@+id/text_edited_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="editado"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:alpha="0.7"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- 💬 Texto del comentario -->
        <TextView
            android:id="@+id/text_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurface"
            android:lineSpacingExtra="2dp"
            android:justificationMode="inter_word"
            tools:text="Este libro es increíble, me está ayudando mucho a entender mejor mi propósito en la vida. Lo recomiendo completamente." />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
