<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NotificationsFragment">


    <!-- ðŸ”„ SwipeRefreshLayout - Bandeja simple y limpia -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_notifications"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ðŸ“‹ Lista de Notificaciones - Estilo consistente -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:itemCount="3"
                tools:listitem="@layout/item_notification"
                tools:visibility="visible"
                android:layout_marginTop="24dp"/>

            <!-- ðŸŽ¯ Empty State - Estilo consistente -->

            <!-- â³ Loading State - Simplificado -->
            <LinearLayout
                android:id="@+id/empty_state_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:visibility="visible">

                <!-- ðŸ”” Ãcono Empty State -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.6"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="@color/bottom_sheet_secondary" />

                <!-- âœ¨ TÃ­tulo Empty State -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Â¡Todo al dÃ­a!"
                    android:textColor="@color/bottom_sheet_title"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- ðŸ“– DescripciÃ³n Empty State -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:text="No tienes notificaciones pendientes.\nÂ¡Disfruta de tu lectura!"
                    android:textColor="@color/bottom_sheet_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/loading_state_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </FrameLayout>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
