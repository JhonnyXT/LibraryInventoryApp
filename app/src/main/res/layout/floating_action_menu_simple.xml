<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ“± Container del menÃº (debe ir ANTES del overlay) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="end"
        android:elevation="10dp">

        <!-- Editar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menu_edit_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:visibility="visible"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:layout_marginEnd="12dp"
                    android:textColor="?attr/colorOnSurface" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    app:tint="?attr/colorPrimary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Eliminar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menu_delete_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:visibility="visible"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar"
                    android:layout_marginEnd="12dp"
                    android:textColor="?attr/colorOnSurface" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    app:tint="?attr/colorError" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- FAB Principal -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_more_options"
            app:tint="?attr/colorOnPrimary"
            app:backgroundTint="?attr/colorPrimary"
            android:contentDescription="Opciones del libro" />

    </LinearLayout>

    <!-- ðŸŽ¯ Overlay (debe ir DESPUÃ‰S del menÃº para menor z-index) -->
    <View
        android:id="@+id/overlay_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>
