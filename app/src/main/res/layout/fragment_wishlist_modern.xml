<?xml version="1.0" encoding="utf-8"?>
<!-- 🌟 Wishlist Fragment - Lista de Deseos Moderna -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".fragments.WishlistModernFragment">

    <!-- 📱 Header con título -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_wishlist"
        style="@style/Widget.Material3.Toolbar.OnSurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ Mis Favoritos"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_wishlist_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0 libros guardados"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="5 libros guardados" />

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- 🔄 SwipeRefreshLayout -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_wishlist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_wishlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 📋 Lista de favoritos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_wishlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="16dp"
                android:scrollbars="vertical"
                android:visibility="gone"
                tools:listitem="@layout/item_wishlist_modern"
                tools:itemCount="3"
                tools:visibility="visible" />

            <!-- 🎯 Empty State -->
            <LinearLayout
                android:id="@+id/empty_state_wishlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="24dp"
                    android:alpha="0.6"
                    android:src="@android:drawable/btn_star_big_off"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="No tienes favoritos"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="Explora el catálogo y guarda los libros que te interesen como favoritos para encontrarlos fácilmente."
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_explore_catalog"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explorar Catálogo"
                    app:icon="@android:drawable/ic_menu_search"
                    app:backgroundTint="?attr/colorPrimary" />

            </LinearLayout>

            <!-- ⏳ Loading State -->
            <FrameLayout
                android:id="@+id/loading_state_wishlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/Widget.Material3.CircularProgressIndicator" />

            </FrameLayout>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
