<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".fragments.BookDetailAdminFragment">

    <!-- 🎨 App Bar con imagen -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:statusBarScrim="?attr/colorPrimaryVariant">

            <!-- 📚 Imagen de portada grande -->
            <ImageView
                android:id="@+id/img_book_cover_large"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Portada del libro"
                app:layout_collapseMode="parallax"
                tools:src="@tools:sample/avatars" />

            <!-- Gradiente overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay"
                app:layout_collapseMode="parallax" />

            <!-- 🔙 Toolbar con botón de regreso -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:title="" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 📋 Contenido principal con scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 📚 Información principal del libro -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 📖 Título -->
                    <TextView
                        android:id="@+id/text_book_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Título del Libro"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        tools:text="El Poder de la Oración Ferviente" />

                    <!-- ✍️ Autor -->
                    <TextView
                        android:id="@+id/text_book_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="por Autor"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="16dp"
                        tools:text="por John MacArthur" />

                    <!-- 📊 Estado y cantidad -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Badge de estado -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="?attr/colorPrimaryContainer">

                            <TextView
                                android:id="@+id/text_book_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Disponible"
                                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                tools:text="Disponible" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Cantidad -->
                        <TextView
                            android:id="@+id/text_book_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 ejemplares"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_gravity="center_vertical"
                            tools:text="3 ejemplares disponibles" />

                    </LinearLayout>

                    <!-- 📝 Descripción -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/text_book_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción del libro..."
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingExtra="4dp"
                        tools:text="Un libro inspirador sobre el poder de la oración en la vida cristiana..." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 🏷️ Categorías e ISBN -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 🏷️ Categorías -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Categorías"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:chipSpacing="8dp">

                        <!-- Las categorías se añadirán dinámicamente -->

                    </com.google.android.material.chip.ChipGroup>

                    <!-- 📱 ISBN -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ISBN"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/text_book_isbn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="978-0-123456-78-9"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="monospace"
                        tools:text="978-0-123456-78-9" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 👥 Información de asignación -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_assignment_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Asignado a"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/text_assigned_users"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Juan Pérez, María González"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Juan Pérez, María González, Carlos López" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Espaciado adicional para el FAB -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 🎯 Menú flotante moderno -->
    <include 
        android:id="@+id/floating_action_menu"
        layout="@layout/floating_action_menu_simple" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
