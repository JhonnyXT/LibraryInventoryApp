<!-- 游닄 Tarjeta moderna Material Design 3 para libros -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
    app:rippleColor="?attr/colorPrimary"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- 游꿛 Portada del libro moderna -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/book_image_container"
            android:layout_width="64dp"
            android:layout_height="88dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/book_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            android:scaleType="centerCrop"
                android:contentDescription="Portada del libro"
            tools:srcCompat="@tools:sample/avatars" />

        </com.google.android.material.card.MaterialCardView>

        <!-- 游닀 Informaci칩n simplificada del libro -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/book_image_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 游닄 T칤tulo del libro -->
        <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:text="T칤tulo del libro"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:maxLines="2"
            android:ellipsize="end"
                android:layout_marginBottom="4dp"
                tools:text="El Poder de la Oraci칩n Ferviente" />

            <!-- 九꽲잺 Autor del libro -->
        <TextView
            android:id="@+id/book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="por Nombre del Autor"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="12dp"
                tools:text="por John MacArthur" />

            <!-- 游늵 Informaci칩n b치sica -->
            <LinearLayout
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

        <TextView
                    android:id="@+id/book_quantity"
                    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                    android:text="3 ejemplares"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="12dp"
                    tools:text="3 ejemplares" />

                <!-- Badge de asignaci칩n r치pida -->
        <TextView
                    android:id="@+id/book_assigned_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 asignados"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="?attr/colorPrimary"
                    android:background="@drawable/bg_assigned_badge"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="2 asignados" />

            </LinearLayout>

            <!-- 游꿢 Badge de estado en l칤nea separada -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/status_badge"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

        <TextView
            android:id="@+id/book_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disponible"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    tools:text="No disponible - Todos asignados" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- 丘멆잺 Alerta de vencimiento compacta -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/expiration_alert_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorErrorContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/book_image_container"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible">

            <TextView
                android:id="@+id/expiration_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="丘멆잺 VENCIDO"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="?attr/colorOnErrorContainer"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="丘멆잺 Libro vencido" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Datos ocultos para el BottomSheet -->
        <TextView
            android:id="@+id/book_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Descripci칩n completa..."
            android:visibility="gone" />

        <TextView
            android:id="@+id/book_category"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Categor칤a"
            android:visibility="gone" />

        <TextView
            android:id="@+id/book_isbn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1234567890"
            android:visibility="gone" />

        <!-- AutoCompleteTextView oculto (se muestra en BottomSheet) -->
        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Botones ocultos (se muestran en BottomSheet) -->
        <Button
            android:id="@+id/assignButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

            <Button
            android:id="@+id/editBookButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

            <Button
                android:id="@+id/deleteBookButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBarAssignBook"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
</com.google.android.material.card.MaterialCardView>