<!-- Lista limpia y escaneable con fondo adaptativo - Click para ver detalles -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_admin_card"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen del libro -->
        <ImageView
            android:id="@+id/book_image"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="#F5F5F5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <!-- T칤tulo del libro -->
        <TextView
            android:id="@+id/book_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="T칤tulo del libro"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/bottom_sheet_title"
            android:fontFamily="sans-serif-medium"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintEnd_toStartOf="@id/status_indicator"
            app:layout_constraintStart_toEndOf="@id/book_image"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Indicador de estado visual -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:background="#4CAF50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Autor del libro -->
        <TextView
            android:id="@+id/book_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="por Nombre del Autor"
            android:textSize="14sp"
            android:textColor="@color/bottom_sheet_secondary"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/status_indicator"
            app:layout_constraintStart_toEndOf="@id/book_image"
            app:layout_constraintTop_toBottomOf="@id/book_title" />

        <!-- Estado y cantidad -->
        <LinearLayout
            android:id="@+id/status_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/status_indicator"
            app:layout_constraintStart_toEndOf="@id/book_image"
            app:layout_constraintTop_toBottomOf="@id/book_author">

            <TextView
                android:id="@+id/book_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textSize="12sp"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:background="#E8F5E8"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/book_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Cantidad: 1"
                android:textSize="12sp"
                android:textColor="@color/bottom_sheet_secondary"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Alerta de vencimiento (solo cuando sea necesario) -->
        <TextView
            android:id="@+id/expiration_alert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="丘멆잺 VENCIDO"
            android:textColor="#D32F2F"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/status_indicator"
            app:layout_constraintStart_toEndOf="@id/book_image"
            app:layout_constraintTop_toBottomOf="@id/status_container" />

        <!-- Informaci칩n de asignaci칩n (texto simple) -->
        <TextView
            android:id="@+id/book_assigned_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="游논 Juan P., Mar칤a G... (+2 m치s)"
            android:textSize="12sp"
            android:textColor="@color/bottom_sheet_text"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/status_indicator"
            app:layout_constraintStart_toEndOf="@id/book_image"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Datos ocultos para el BottomSheet -->
        <TextView
            android:id="@+id/book_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Descripci칩n completa..."
            android:visibility="gone" />

        <TextView
            android:id="@+id/book_category"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Categor칤a"
            android:visibility="gone" />

        <TextView
            android:id="@+id/book_isbn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1234567890"
            android:visibility="gone" />

        <!-- AutoCompleteTextView oculto (se muestra en BottomSheet) -->
        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Botones ocultos (se muestran en BottomSheet) -->
        <Button
            android:id="@+id/assignButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/editBookButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/deleteBookButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBarAssignBook"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>