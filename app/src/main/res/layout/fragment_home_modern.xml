<?xml version="1.0" encoding="utf-8"?>
<!-- 🏠 Home Fragment Moderno - Diseño Premium Material Design 3 -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".fragments.HomeModernFragment">

    <!-- 📱 AppBar moderno con Material Design 3 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true"
        style="@style/Widget.Material3.AppBarLayout">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            style="@style/Widget.Material3.Toolbar.OnSurface">


            <!-- 🎯 Header Actions - Íconos Material Design Mejorados -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:paddingEnd="8dp">

                <!-- 🚪 Botón de Logout - Material Design -->
                <ImageButton
                    android:id="@+id/btn_logout_header"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Cerrar sesión"
                    android:padding="8dp"
                    android:src="@drawable/ic_logout"
                    android:scaleType="centerInside" />

                <!-- 🔔 Notificaciones - Material Design con Badge -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_notifications_header"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Ver notificaciones"
                        android:padding="8dp"
                        android:src="@drawable/ic_notifications"
                        android:scaleType="centerInside" />

                    <!-- Badge contador con color principal -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_notifications_badge"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:visibility="visible"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="?attr/colorPrimary">

                        <TextView
                            android:id="@+id/text_notifications_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                </FrameLayout>

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

        <!-- 👋 Saludo personalizado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/text_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:alpha="0.8"
                tools:text="Welcome back, Bunny!" />

            <TextView
                android:id="@+id/text_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="¿Qué quieres leer hoy?"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <!-- 📱 Contenido principal con scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="88dp">

            <!-- 🔍 Buscador moderno - Encima de Categorías -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_search_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_books"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:color/transparent"
                    app:queryHint="Buscar por título, autor o categoría..."
                    app:iconifiedByDefault="false"
                    app:closeIcon="@android:drawable/ic_menu_close_clear_cancel"
                    app:searchIcon="@android:drawable/ic_menu_search"
                    app:submitBackground="@android:color/transparent"
                    style="@style/Widget.AppCompat.SearchView" />

            </com.google.android.material.card.MaterialCardView>

            <!-- 🏷️ Sección de Categorías -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <!-- Título Categorías -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="12dp"
                    android:text="Categorías"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />

                <!-- Chips de categorías horizontales -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_categories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="4dp"
                        app:singleSelection="true"
                        app:checkedChip="@+id/chip_todas_categorias">

                        <!-- Chip "Todas" por defecto seleccionado -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_todas_categorias"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Todas"
                            android:checked="true"
                            android:textColor="@color/chip_category_text"
                            app:chipBackgroundColor="@color/chip_category_background"
                            app:chipStrokeWidth="0dp"
                            app:checkedIconVisible="false" />

                        <!-- Más chips se añadirán dinámicamente -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_show_more"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Mostrar más"
                            android:textColor="?attr/colorPrimary"
                            app:chipIcon="@android:drawable/ic_input_add"
                            app:chipIconTint="?attr/colorPrimary" />

                    </com.google.android.material.chip.ChipGroup>

                </HorizontalScrollView>

            </LinearLayout>

            <!-- 📚 Sección de Libros -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="24dp">

                <!-- Header de sección de libros -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_books_section_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Libros Recomendados"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_see_all_books"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver todos"
                        android:textColor="?attr/colorPrimary"
                        app:icon="@android:drawable/ic_menu_view"
                        app:iconTint="?attr/colorPrimary" />

                </LinearLayout>

                <!-- 📖 RecyclerView horizontal de libros -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_books_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp"
                    android:scrollbars="none"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:orientation="horizontal"
                    tools:listitem="@layout/item_book_horizontal_modern"
                    tools:itemCount="5" />

            </LinearLayout>

            <!-- 🔥 Sección Libros Populares (opcional) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="32dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="16dp"
                    android:text="📚 Más Solicitados"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_popular_books"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp"
                    android:scrollbars="none"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:orientation="horizontal"
                    tools:listitem="@layout/item_book_horizontal_modern"
                    tools:itemCount="5" />

            </LinearLayout>

            <!-- 🎯 Empty State cuando no hay libros -->
            <LinearLayout
                android:id="@+id/empty_state_home"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.6"
                    android:src="@android:drawable/ic_dialog_alert"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay libros disponibles"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- ⏳ Loading overlay -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.Material3.CircularProgressIndicator" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
