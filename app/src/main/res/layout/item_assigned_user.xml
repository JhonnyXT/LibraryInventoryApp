<?xml version="1.0" encoding="utf-8"?>
<!-- Item individual para usuario asignado en BottomSheet -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_admin_card"
    android:elevation="1dp"
    android:padding="12dp">

    <!-- InformaciÃ³n del usuario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- InformaciÃ³n principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre del usuario -->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan PÃ©rez"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/bottom_sheet_title"
                android:fontFamily="sans-serif-medium" />

            <!-- Fecha de vencimiento -->
            <TextView
                android:id="@+id/expiration_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="ðŸ“… Vence: 15/01/2025"
                android:textSize="12sp"
                android:textColor="@color/bottom_sheet_secondary"
                android:fontFamily="sans-serif" />

            <!-- Estado/alerta de vencimiento -->
            <TextView
                android:id="@+id/expiration_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="âš ï¸ Vencido hace 3 dÃ­as"
                android:textSize="11sp"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Indicador visual de estado -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="#4CAF50" />

    </LinearLayout>

    <!-- Botones de acciÃ³n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- BotÃ³n cambiar fecha -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_date_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:text="ðŸ“… Cambiar Fecha"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#2196F3"
            android:paddingHorizontal="12dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- BotÃ³n desasignar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/unassign_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="âŒ Desasignar"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#F44336"
            android:paddingHorizontal="12dp"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>
