<?xml version="1.0" encoding="utf-8"?>
<!-- Diseño moderno y profesional para edición de libros -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_admin_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Premium -->
        <!-- Header con fondo adaptativo -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_admin_card"
            android:elevation="4dp"
            android:layout_marginTop="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📝 Editar Libro"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_sheet_title"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Actualiza la información del libro"
                    android:textSize="14sp"
                    android:textColor="@color/bottom_sheet_secondary"
                    android:fontFamily="sans-serif" />

            </LinearLayout>
        </FrameLayout>

        <!-- Sección: Información del Libro -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_admin_card"
            android:elevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header de sección -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📚 Información Básica"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_sheet_title"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Título del libro -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="📖 Título del libro"
                    app:startIconDrawable="@drawable/ic_book_default"
                    app:startIconTint="@color/bottom_sheet_secondary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/book_title_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="2" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Autor del libro -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="👤 Autor del libro"
                    app:startIconDrawable="@drawable/ic_book_default"
                    app:startIconTint="@color/bottom_sheet_secondary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/book_author_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- ISBN con botón de escaneo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="🔢 ISBN"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/book_isbn_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/scan_code_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="📷 Escanear"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

                <!-- Descripción -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="📝 Descripción del libro"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/book_description_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:gravity="top" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </FrameLayout>

        <!-- Sección: Categorías y Cantidad -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_admin_card"
            android:elevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header de sección -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏷️ Clasificación y Stock"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_sheet_title"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Botón de categorías -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectCategoryButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:text="🏷️ Seleccionar Categorías"
                    android:textSize="16sp"
                    android:backgroundTint="@color/bottom_sheet_secondary"
                    style="@style/Widget.MaterialComponents.Button" />

                <!-- Categorías seleccionadas -->
                <TextView
                    android:id="@+id/selectedCategoriesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Categorías: Ninguna seleccionada"
                    android:textSize="14sp"
                    android:textColor="@color/bottom_sheet_text"
                    android:background="@drawable/bg_admin_card"
                    android:padding="12dp"
                    android:fontFamily="sans-serif"
                    android:elevation="2dp" />

                <!-- Cantidad y Código en fila -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="📦 Cantidad"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/book_quantity_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="🏷️ Código (opcional)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/book_code_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <!-- Sección: Gestión Completa de Préstamos -->
        <FrameLayout
            android:id="@+id/loan_management_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_admin_card"
            android:elevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header de sección -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👥 Gestión Completa de Préstamos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_sheet_title"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestiona todos los préstamos de este libro desde aquí"
                    android:textSize="14sp"
                    android:textColor="@color/bottom_sheet_secondary"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif" />

                <!-- Contenedor de usuarios asignados (dinámico) -->
                <LinearLayout
                    android:id="@+id/assigned_users_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Este contenedor se pobla dinámicamente desde Kotlin -->
                    <!-- Cada usuario tendrá su propio card con información y botones -->

                </LinearLayout>

                <!-- Mensaje cuando no hay usuarios asignados -->
                <TextView
                    android:id="@+id/no_users_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📋 No hay usuarios con préstamos activos"
                    android:textSize="14sp"
                    android:textColor="@color/bottom_sheet_secondary"
                    android:textAlignment="center"
                    android:padding="24dp"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />

                <!-- Separador visual -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bottom_sheet_secondary"
                    android:alpha="0.3"
                    android:layout_marginBottom="16dp" />

                <!-- Sección para asignar nuevo usuario -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="➕ Asignar Nuevo Usuario"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_sheet_title"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Campo de búsqueda de usuario -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="👤 Buscar usuario para asignar"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="12dp">

                    <AutoCompleteTextView
                        android:id="@+id/user_search_autocomplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textColor="@color/bottom_sheet_title"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botón para asignar nuevo usuario -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/assign_new_user_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="✅ ASIGNAR NUEVO USUARIO"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>
        </FrameLayout>

        <!-- Sección: Imagen del Libro -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_admin_card"
            android:elevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header de sección -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📷 Imagen del Libro"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_sheet_title"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Botón de imagen -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/capture_image_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:text="📸 Cambiar Imagen del Libro"
                    android:textSize="16sp"
                    android:backgroundTint="@color/bottom_sheet_title"
                    style="@style/Widget.MaterialComponents.Button" />

                <!-- Vista de imagen -->
                <ImageView
                    android:id="@+id/captured_image_view"
                    android:layout_width="200dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_admin_card"
                    android:visibility="gone"
                    tools:src="@drawable/ic_book_default" />

            </LinearLayout>
        </FrameLayout>

        <!-- Botones de acción finales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="❌ Cancelar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#757575"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/update_book_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="💾 Actualizar Libro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#2196F3"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <!-- ProgressBar elegante -->
        <FrameLayout
            android:id="@+id/progress_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@drawable/bg_admin_card"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actualizando libro..."
                    android:textSize="16sp"
                    android:textColor="@color/bottom_sheet_title"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</ScrollView>