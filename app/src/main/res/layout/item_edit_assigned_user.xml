<?xml version="1.0" encoding="utf-8"?>
<!-- Item individual para usuario asignado en EditBook - Más espacioso que BottomSheet -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_admin_card"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con nombre y estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Información del usuario -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Nombre del usuario -->
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan Pérez González"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_sheet_title"
                    android:fontFamily="sans-serif-medium" />

                <!-- Email del usuario -->
                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="📧 juan.perez@email.com"
                    android:textSize="14sp"
                    android:textColor="@color/bottom_sheet_secondary"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Indicador visual de estado (más grande) -->
            <View
                android:id="@+id/status_indicator"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="#4CAF50" />

        </LinearLayout>

        <!-- Información de fechas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_admin_card"
            android:padding="12dp"
            android:elevation="1dp">

            <!-- Fecha de asignación -->
            <TextView
                android:id="@+id/assigned_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📅 Asignado: 01/01/2025"
                android:textSize="14sp"
                android:textColor="@color/bottom_sheet_text"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp" />

            <!-- Fecha de vencimiento -->
            <TextView
                android:id="@+id/expiration_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰ Vence: 15/01/2025"
                android:textSize="14sp"
                android:textColor="@color/bottom_sheet_text"
                android:fontFamily="sans-serif" />

            <!-- Estado/alerta de vencimiento -->
            <TextView
                android:id="@+id/expiration_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="🚨 VENCIDO HACE 3 DÍAS"
                android:textSize="14sp"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:visibility="gone"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Botones de acción (más espaciosos) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Botón cambiar fecha -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/change_date_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="📅 Cambiar Fecha"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#2196F3"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- Botón desasignar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/unassign_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="❌ Desasignar"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#F44336"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
