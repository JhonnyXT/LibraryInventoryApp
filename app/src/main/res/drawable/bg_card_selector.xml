<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#F0F4F8"
                        android:centerColor="#E2E8F0"
                        android:endColor="#CBD5E0"
                        android:angle="135" />
                    <corners android:radius="16dp" />
                    <stroke
                        android:width="2dp"
                        android:color="#3B82F6" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Estado normal -->
    <item>
        <layer-list>
            <!-- Sombra -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#15000000" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            
            <!-- Fondo principal -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#FFFFFF"
                        android:centerColor="#FAFBFC"
                        android:endColor="#F4F6F8"
                        android:angle="135" />
                    <corners android:radius="16dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#E1E7ED" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
