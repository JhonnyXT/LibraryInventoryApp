<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Sombra externa sutil -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#10000000"
                android:endColor="#00000000"
                android:angle="90" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Fondo principal con gradiente -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FEFEFE"
                android:centerColor="#F9FAFB"
                android:endColor="#F1F5F9"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Borde superior brillante -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#E2E8F0" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
</layer-list>
