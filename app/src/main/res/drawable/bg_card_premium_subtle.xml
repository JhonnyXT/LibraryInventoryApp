<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Sombra muy sutil -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="1dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#08000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Fondo principal con degradado muy sutil -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FDFDFE"
                android:centerColor="#FAFBFC"
                android:endColor="#F6F7F9"
                android:angle="135" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Borde elegante -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#E4E6EA" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Brillo sutil superior -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    
</layer-list>
