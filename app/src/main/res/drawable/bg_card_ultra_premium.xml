<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Efecto glow cuando se presiona -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#E0F2FE"
                        android:centerColor="#BAE6FD"
                        android:endColor="#7DD3FC"
                        android:angle="135" />
                    <corners android:radius="18dp" />
                    <stroke
                        android:width="2dp"
                        android:color="#0EA5E9" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Estado normal -->
    <item>
        <layer-list>
            
            <!-- Sombra externa profunda -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="4dp"
                android:bottom="8dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#30000000"
                        android:endColor="#00000000"
                        android:angle="90" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            
            <!-- Sombra media -->
            <item
                android:left="1dp"
                android:top="2dp"
                android:right="3dp"
                android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="#15000000" />
                    <corners android:radius="19dp" />
                </shape>
            </item>
            
            <!-- Fondo principal con gradiente ultra premium -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="4dp"
                android:bottom="8dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#FFFFFF"
                        android:centerColor="#FDFDFD"
                        android:endColor="#F8FAFC"
                        android:angle="135" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            
            <!-- Borde exterior elegante -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="4dp"
                android:bottom="8dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#E2E8F0" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            
            <!-- LÃ­nea de brillo superior -->
            <item
                android:left="4dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="12dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#40FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:angle="90" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            
        </layer-list>
    </item>
    
</selector>
