<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Degradado azul muy sutil y elegante -->
    <gradient
        android:startColor="#FEFEFF"
        android:centerColor="#F8F9FB"
        android:endColor="#F3F4F8"
        android:angle="135"
        android:type="linear" />
    
    <!-- Borde con toque azul muy sutil -->
    <stroke
        android:width="1dp"
        android:color="#E1E5EB" />
    
    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />
    
</shape>
