<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Gradiente moderno modo claro (igual al BottomSheet) -->
    <gradient
        android:type="linear"
        android:angle="160"
        android:startColor="#F3F5F9"
        android:centerColor="#EDF2F7" 
        android:endColor="#E2E8F0" />
    
    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />
        
    <!-- Borde sutil -->
    <stroke 
        android:width="1dp"
        android:color="#CBD5E0" />
        
</shape>
