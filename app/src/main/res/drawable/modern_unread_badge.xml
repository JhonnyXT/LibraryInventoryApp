<?xml version="1.0" encoding="utf-8"?>
<!-- Badge moderno para notificaciones no leídas -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    
    <!-- Gradiente sutil para más profesionalismo -->
    <gradient
        android:type="radial"
        android:gradientRadius="6dp"
        android:startColor="#FF5252"
        android:endColor="#D32F2F" />
    
    <!-- Sombra sutil -->
    <stroke 
        android:width="2dp"
        android:color="@android:color/white" />
        
    <size 
        android:width="12dp"
        android:height="12dp" />
        
</shape>
